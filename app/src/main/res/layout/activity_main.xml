<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.williamrussa3.petmanagerapplication.MainActivity">


    <ListView
        android:id="@+id/petList"
        android:layout_width="wrap_content"
        android:layout_height="447dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_pet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Pet"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_anchorGravity="bottom|center_horizontal"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="@dimen/fab_margin"
        android:paddingBottom="30dp"
        android:tint="@android:color/black"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/add_pet_text"
        android:layout_marginEnd="13dp"
        app:layout_constraintRight_toRightOf="@+id/add_pet_text"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/exp_log_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginEnd="30dp"
        android:text="Expenses Log"
        app:layout_anchorGravity="bottom|right"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="220dp" />

</android.support.constraint.ConstraintLayout>